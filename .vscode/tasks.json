{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Godot Editor",
			"type": "shell",
			"args": [
				"-e",
				"${workspaceFolder}/project.godot"
			],
			"osx": {
				"command": "godot"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Godot Run",
			"type": "shell",
			"args": [
				"${workspaceFolder}/project.godot"
			],
			"osx": {
				"command": "godot"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		}
	]
}